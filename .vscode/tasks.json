{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile libft",
            "type": "cppbuild",
            "command": "cc",
            "args": [
                "-g",
                "-Wall",
                "-Werror",
                "-Wextra",
                "${workspaceFolder}/*.c",
                "-o",
                "${workspaceFolder}/bin/myApplication"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}